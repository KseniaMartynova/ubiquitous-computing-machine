FROM gcc:12.4   
RUN apt-get update && apt-get install -y \
        make \
        cmake \  
        git \  
        libopenblas-dev \ 
        liblapack-dev \
        liblapacke-dev \
        && rm -rf /var/lib/apt/lists/*
WORKDIR /usr/share/lapack  
COPY lapack_lu.cpp /usr/share/lapack/lu/lapack_lu.cpp
RUN g++ -o lalu lapack_lu.cpp -lopenblas -llapacke -lm -lpthread
ENTRYPOINT ["./lalu"]
